<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form" xmlns:i="/issues" xmlns:st="jelly:stapler">

  <st:documentation>
    Provides all required input fields to publish checks.
  </st:documentation>

  <i:hr title="${%Checks Configuration}"/>

  <f:entry title="${%title.publishChecks}" description="${%description.publishChecks}"
           field="publishChecks">
    <f:checkbox default="true"/>
  </f:entry>

</j:jelly>
